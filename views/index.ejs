<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <%- include('./partials/head.ejs') %>
</head>

<body>

  <body>
    <div class="container">


      <% if (currentUser) { %>
      <% console.log(currentUser) %>
      <h1>Welcome <%= currentUser.name %> </h1>

      <h2>
        <a class="waves-effect waves-light btn" href="/feedback/submit">Input Customer Feedback</a>
      </h2>

      <h2>
        <a class="waves-effect waves-light btn" href="/feedback">Review Customer Feedback</a>
      </h2>

      <h2>
        <a class="waves-effect waves-light btn" href="/users">View Colleagues</a>
      </h2>
      
      <% if(currentUser.admin) { %>

      <h3>Administrator Functions</h3>
      <a href="/users">Manage Users</a>
      <%  } %>
      <h2>

        <form action="/sessions?_method=DELETE" method="post">
          <input type="submit" name="" value="Logout" class="waves-effect waves-light btn">
        </form>

        <% } else { %>
        <h2>Please</h2>
        <a href="/register" class="waves-effect waves-light btn">Register</a>
        <h3>or</h3>
        <a href="sessions/new" class="waves-effect waves-light btn">Log In</a>
        <% } %>

    </div>
  </body>

</html>